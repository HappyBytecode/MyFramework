<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_with_image"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp_12"
    android:paddingRight="@dimen/dp_12">

    <ImageView
        android:id="@+id/iv_dir_cover"
        android:layout_width="@dimen/nav_height_width"
        android:layout_height="@dimen/nav_height_width"
        android:layout_marginRight="@dimen/dp_12"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dir_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_3" />

        <TextView
            android:id="@+id/tv_dir_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dark_5" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_4"
        android:src="@mipmap/ic_photo_picker_radio" />
</LinearLayout>
